<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/centrar"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="1"
            android:textColor="@color/letraNegra"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="@dimen/letraLogin"
            android:text="@string/nombreLogin"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/nombre"
            android:background="@drawable/edittext_borde_azul_background"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/letraNegra"
            android:text="@string/passwordLogin"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="@dimen/letraLogin"
            android:layout_height="wrap_content"></TextView>
        <EditText
            android:id="@+id/password"
            android:background="@drawable/edittext_borde_azul_background"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        </EditText>



    </LinearLayout>

    <Button
        android:id="@+id/login"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:text="Iniciar SesiÃ³n"
        android:layout_height="wrap_content">
    </Button>


</LinearLayout>