<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/colorPrimaryDark"
    app:popupTheme="@style/Theme.AppCompat.Light"
    android:id="@+id/toolbar"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:src="@drawable/ic_estetoscopio"
            android:layout_marginLeft="15dp"
            android:layout_width="@dimen/dimensionesLogo"
            android:layout_height="@dimen/dimensionesLogo"
            ></ImageView>
        <TextView
            android:text="EXAMENES COVID-19"
            android:id="@+id/titulo_toolbar"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/margenLogo"
            android:textSize="@dimen/textoLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>


</androidx.appcompat.widget.Toolbar>